generator client {
  provider = "prisma-client-js"
  output = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  @@map("users")
  id                 String   @id @default(cuid())
  email              String   @unique
  firstName          String   @db.VarChar(40)
  lastName           String   @db.VarChar(40)
  password           String
  role               UserRole @default(CUSTOMER)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  avatar             String?

  addresses Address[]
  refreshTokens RefreshToken[]
}

model Address {
  @@map("addresses")
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  street    String
  city      String
  state     String
  country   String
  zipCode   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  type AddressType

}

enum AddressType {
  BILLING
  SHIPPING
}

enum UserRole {
  CUSTOMER
  ADMIN
}

model Product {
  @@map("product")
  id             String   @id @default(cuid())
  name           String
  description    String?
  price          Decimal  @db.Decimal(10,2)
  sku            String   @unique
  stockQuantity  Int       @default(0)
  category       String?
  brand          String?
  weight         Float?
  width          Float?
  height         Float?
  length         Float?
  isActive       Boolean   @default(true)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  images         ProductImage[]
}

model ProductImage {
  @@map("product_images")
  id          String  @id @default(cuid())
  productId   String
  product     Product @relation(fields: [productId], references: [id])
  url         String
  altText     String?
  isPrimary   Boolean @default(false)
}

model RefreshToken {
  @@map("refresh_tokens")
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
}